{{#each course in model}}
    <div class="col-sm-6">
        <img id="add-first-assignment" src="/ember/images/add-first-assignment.png">

        <section class="panel">

        <header class="panel-heading">
            {{#link-to 'assignments.course' course data-toggle="modal" href="#Picker"}}
                <i class="fa fa-edit"></i>
                {{course.course_name}} <small><i>{{course.instructor_name}}</i></small>
            {{/link-to}}
            {{#link-to 'assignments.newAssignment' course tag="button" class="pull-right btn btn-primary" data-toggle="modal" href="#Picker"}}
                <i class="fa fa-plus"></i> Add Assignment
            {{/link-to}}
        </header>
        <div class="panel-body">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Assignment Name</th>
                    <th>Due Date</th>
                </tr>
                </thead>
                <tbody>

                {{#each assignment in course.assignments}}
                    {{#unless assignment.archived}}
                        {{#link-to 'assignments.info' assignment tagName="tr" class=assignment.hidden data-toggle="modal" href="#Picker"}}
                            <td> {{assignment.assignment_name}}</td>
                            <td> {{assignment.dueDate}}</td>
                        {{/link-to}}
                    {{/unless}}
                {{/each}}
                </tbody>
            </table>
        </div>
    </section>
</div>
{{/each}}
<div class="modal fade" id="Picker" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            {{outlet}}
        </div>
    </div>
</div>

