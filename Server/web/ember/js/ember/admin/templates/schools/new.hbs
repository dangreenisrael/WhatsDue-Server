<div class="modal-header">
    <button type="button" {{action 'close'}} class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 class="modal-title">New Course</h4>
</div>
<div class="modal-body">
    <form action="#" class="form-horizontal ">
        <div class="form-group">
            <div class="col-md-6">
                {{input type="text" value=name class="pull-left form-control" placeholder="School Name"}}
            </div>
            <div class="col-md-6">
                {{input type="text" value=city  class="form-control" size="16" placeholder="City"}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                {{input type="text" value=region class="pull-left form-control" placeholder="Region"}}
            </div>
            <div class="col-md-6">
                {{input type="text" value=country  class="form-control" size="16" placeholder="Country"}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                {{input type="text" value=address class="pull-left form-control" placeholder="Address"}}
            </div>
            <div class="col-md-6">
                {{input type="text" value=contact_name  class="form-control" size="16" placeholder="Contact Name"}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                {{input type="text" value=contact_email class="pull-left form-control" placeholder="Contact Email"}}
            </div>
            <div class="col-md-6">
                {{input type="text" value=contact_phone  class="form-control" size="16" placeholder="Contact Phone"}}
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button  data-dismiss="modal" class="btn btn-primary" type="button" {{action 'save'}} >Save</button>
</div>