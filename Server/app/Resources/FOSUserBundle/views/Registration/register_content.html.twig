<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    <div class="login-wrap">
        {{ form_errors(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_errors(form.username) }}
        {{ form_errors(form.email) }}

        {{ form_widget(form.username, {'attr': {
            'class': 'form-control',
            'placeholder' : 'Choose User ID (Letters or Numbers - No Spaces)',
            'maxlength'   : 12,
            'oninvalid'   : "setCustomValidity('Only Numbers and Letters Please (no spaces)')",
            'onchange'    : "try{setCustomValidity('')}catch(e){}",
            'pattern'     : "[a-zA-Z0-9]+"
        }}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder' : 'Choose Password'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'Confirm Password'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'Your E-Mail'}}) }}

        <button value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-lg btn-login btn-block" type="submit">
            <i class="fa fa-check"></i>
        </button>
    {{ form_widget(form) }}
    </div>
</form>
